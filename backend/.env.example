# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_kiosk
DB_USER=kiosk_user
DB_PASSWORD=your_password_here

# Socket.io Configuration
SOCKET_CORS_ORIGIN=*
